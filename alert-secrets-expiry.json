{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertRuleName": {
      "type": "string",
      "defaultValue": "SecretExpiryAlert"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "actionGroupId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the Action Group to notify."
      }
    },
    "appInsightsId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the Application Insights instance."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/scheduledQueryRules",
      "apiVersion": "2021-08-01",
      "name": "[parameters('alertRuleName')]",
      "location": "[parameters('location')]",
      "properties": {
        "description": "Alert when a secret is within 10 days of expiry (excluding already expired secrets).",
        "enabled": true,
        "severity": 2,
        "evaluationFrequency": "PT5M",
        "scopes": [
          "[parameters('appInsightsId')]"
        ],
        "criteria": {
          "allOf": [
            {
              "query": "customEvents\n| where name == 'SecretExpiryCheck'\n| extend DaysToExpiry = toint(customDimensions.DaysToExpiry)\n| where DaysToExpiry >= 0 and DaysToExpiry <= 10\n| summarize Count=count() by tostring(customDimensions.SecretName)",
              "timeWindow": "PT5M",
              "thresholdOperator": "GreaterThan",
              "threshold": 0,
              "failingPeriods": {
                "numberOfEvaluationPeriods": 1,
                "minFailingPeriodsToAlert": 1
              },
              "metricMeasureColumn": "Count",
              "operator": "GreaterThan", // Added for ARM schema compatibility
              "alertSensitivity": "Medium" // Optional: improves clarity for some deployments
            }
          ]
        },
        "actions": [
          {
            "actionGroupId": "[parameters('actionGroupId')]"
          }
        ],
        "autoMitigate": true
      }
    }
  ]
}
